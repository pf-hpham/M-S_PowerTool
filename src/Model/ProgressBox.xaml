<Window x:Class="MnS.ProgressBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="25" Width="480"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ProgressBar x:Name="progress" Grid.Row="0" Grid.Column="0" Margin="0" Background="White" Foreground="LightGreen" Maximum="100"/>
        <Label x:Name="progbar" Content="Process running, please wait a moment..." Grid.Row="0" Grid.Column="0" Background="Transparent" Foreground="Black" FontSize="11" FontWeight="DemiBold" Margin="0"></Label>
    </Grid>
</Window>