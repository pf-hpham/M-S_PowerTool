<Window x:Class="ColorChange.Page1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" 
        WindowState="Maximized"
        Title="Page1"
        ResizeMode="NoResize" 
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="MainWindow_Loaded">
    <Grid>
        <Canvas Background="Black" x:Name="canvas" Opacity="0.5">
            <TextBlock x:Name="pos" Width="200" Margin="0,0" Foreground="White"></TextBlock>
        </Canvas>
    </Grid>
</Window>
