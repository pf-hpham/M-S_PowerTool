<Window x:Class="MnS.Icon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="30"
        WindowStartupLocation="Manual" Top="0" Left="0"
        AllowsTransparency="True"
        WindowStyle="None"
        ShowInTaskbar="False"
        Topmost="True"
        Width="30">
    <Window.Background>
        <SolidColorBrush Color="Transparent" Opacity="0.55"/>
    </Window.Background>
    <Grid>
        <Button x:Name="ic_hidden" Background="Transparent" ToolTip="Show Toolbar" Click="Ic_Click">
            <Image Source="\assets\icons\mns.ico" Width="20" Height="20"/>
        </Button>
    </Grid>
</Window>
